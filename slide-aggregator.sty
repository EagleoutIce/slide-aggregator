%% hooks
%% -----------------------------------------------------------------------------

\newcommand\pagehook[3][]{%
\@namedef{sag@extraopts@#2}{#1}%
\ifcsname sag@pagehook@#2\endcsname
    \csappto{sag@pagehook@#2}{,\space#3}%
\else
    \csappto{sag@pagehook@#2}{#3}%
\fi
}

\newcommand\pagenote[3][]{%
\@namedef{sag@extraopts@#2}{#1}%
\ifcsname sag@pagenote@#2\endcsname
    \csappto{sag@pagenote@#2}{,\space#3}%
\else
    \csappto{sag@pagenote@#2}{#3}%
\fi
}

