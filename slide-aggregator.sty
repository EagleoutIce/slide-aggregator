%% counter hooks
%% -----------------------------------------------------------------------------

\newcounter{sag@reg@block}
\newcounter{sag@reg@subblock}

\colorlet{sag@default@color}{black}

% every hook will precreate its corresponding savebox
% this should be fine

\def\@sag@build@blkblob#1#2{%
\expandafter\newsavebox\csname sag@s@\arabic{sag@reg@block}\endcsname
\expandafter\savebox\csname sag@s@\arabic{sag@reg@block}\endcsname{%
    \tikz{\path node [sag@blob=#1] {\hyperlink{sag@blk:\arabic{sag@reg@block}}{\arabic{sag@reg@block}~#2}};}%
}%
}

\newcommand*\@sag@block[2][sag@default@color]{%
    \stepcounter{sag@reg@block}%
    \setcounter{sag@reg@subblock}{0}%
    \@namedef{sag@reg@subblock@\arabic{sag@reg@block}}{0}%
    \@namedef{color@\arabic{sag@reg@block}}{#1}%
    \@namedef{name@\arabic{sag@reg@block}}{#2}%
    \@sag@build@blkblob{#1}{#2}%
}

\def\@sag@build@subblkblob#1#2{%
\expandafter\newsavebox\csname sag@s@\arabic{sag@reg@block}@\arabic{sag@reg@subblock}\endcsname
\expandafter\savebox\csname sag@s@\arabic{sag@reg@block}@\arabic{sag@reg@subblock}\endcsname{%
    \tikz{\path node [sag@blob=#1,text=black] {\hyperlink{sag@sub@blk:\arabic{sag@reg@block}@\arabic{sag@reg@subblock}}{\arabic{sag@reg@subblock}~#2}};}%
}%
}

\newcommand*\@sag@subblock[3][\@nameuse{color@\arabic{sag@reg@block}}]{%
    \stepcounter{sag@reg@subblock}%
    \expandafter\edef\csname sag@reg@subblock@\arabic{sag@reg@block}\endcsname{\arabic{sag@reg@subblock}}%
    \@namedef{color@@\arabic{sag@reg@block}@\arabic{sag@reg@subblock}}{#1!50!white}%
    \@namedef{file@@\arabic{sag@reg@block}@\arabic{sag@reg@subblock}}{#2}%
    \@namedef{name@@\arabic{sag@reg@block}@\arabic{sag@reg@subblock}}{#3}%
    \@sag@build@subblkblob{\@nameuse{color@@\arabic{sag@reg@block}@\arabic{sag@reg@subblock}}}{#3}%
}

