\def\sag@@pgmarker{\node at (current page.north east) {\sag@@ph\hypertarget{sag@pg:\thepage}{}};}
\def\sag@@pgblob{\node[below left=0.25cm,sag@blob=\blkclr,outer sep=0pt] (tp) at(current page.north east) {\thepage};}

\def\sag@@commentblob{%
